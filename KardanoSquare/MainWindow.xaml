                    <TextBlock Text="Розмір матриці" FontSize="16" Margin="10"/>
                    <TextBox x:Name="sizeTextBox" Width="40" Height="26" FontSize="16" Text=""></TextBox>
                    <Button Content="Відобразити" Margin="10" Padding="10 0" FontSize="16" Click="Button_Click_1"></Button>
                </StackPanel>
            </StackPanel>
        </Grid>
        <Grid Grid.Column="1">
            
        </Grid>
    </Grid>
</Window>
